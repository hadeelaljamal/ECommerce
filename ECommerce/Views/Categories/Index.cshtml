@model IEnumerable<Category>

@{
    ViewData["Title"]="Index";
}


<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    @* <th>Name</th>
                    <th>Description</th> *@

                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Description)</th>
                    <th>Action</th>
                </tr>

            </thead>

            <tbody>
                <div class="text-white" style="position:fixed; right:25px; bottom:90px;">
                    <a asp-action="Create" asp-controller="Categories" class="btn btn-outline-success">
                        <i class="fas fa-regular fa-plus-square mr-2"></i>
                        Create
                    </a>
                </div>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.Name)</td>
                        <td>@Html.DisplayFor(x => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info"> <i class="fas fa-regular fa-pencil mr-2"></i> Edit</a>
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"> <i class="fas fa-regular fa-eye mr-2"></i> Details</a>
                            @*<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.CategoryId"> <i class="fas fa-regular fa-trash mr-2"></i> Delete</a>*@
                            <a asp-action="Delete" asp-route-id="@item.Id">
                               
                                <input  type="submit" value="Delete" class="btn btn-outline-danger"
                                       onclick="return confirm('Are You Sure Want To Delete This Category')" />
                            </a>
                          
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
