@model Category
@{
    ViewData["Title"] = "Edit Category";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h2 class="text-center">Edit @Model.Name Category</h2>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@* 
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label" hidden> </label>
                <input asp-for="CategoryId" class="form-control" autocomplete="off" hidden />
                <span asp-validation-for="CategoryId" class="text-danger" hidden></span>
            </div> *@


            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"> </label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"> </label>
                <textarea asp-for="Description" class="form-control" rows=3></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                @* <labsel></labsel> *@
                <input  type="submit" value="Update" class="btn btn-outline-info float-right" />
                <a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}