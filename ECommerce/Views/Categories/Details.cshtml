@model Category
@{
    ViewData["Title"] = "Category Details";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h2 class="text-center">Details od @Model.Name - Category</h2>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        
            <div class="form-group">
                <label asp-for="Name" class="control-label"> </label>
            <input asp-for="Name" class="form-control" autocomplete="off" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"> </label>
            <textarea asp-for="Description" class="form-control" rows=3 readonly></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info" style="float:right;">

                    <i class="fas fa-regular fa-pencil"></i>
            </a>
             <a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>

            </div>
      
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}